  body
    .limiter
      .container-login100
        .wrap-login100.p-l-55.p-r-55.p-t-65.p-b-50
          form.login100-form.validate-form(action='http://localhost:3000', method='POST')
            span.login100-form-title.p-b-33
              | Welcome
            .wrap-input100.validate-input(data-validate='User is required')
              input.input100(type='text', name='user', placeholder='Email')
              span.focus-input100-1
              span.focus-input100-2
            .wrap-input100.rs1.validate-input(data-validate='Password is required')
              input.input100(type='password', name='pass', placeholder='Password')
              span.focus-input100-1
              span.focus-input100-2
            .container-login100-form-btn.m-t-20
              button.login100-form-btn
                | Sign in
            .text-center.p-t-45.p-b-4
              span.txt1

